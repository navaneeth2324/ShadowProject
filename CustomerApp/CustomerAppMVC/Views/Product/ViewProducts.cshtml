@model IEnumerable<CustomerAppDTO.ProductDTO>

@{
    ViewBag.Title = "ProductsView";
}
<center>
    <h2>Products List</h2>
</center>

<br />
@if (TempData["AlertMessage"]!=null)
            {
                <div class="alert alert-success">
                    <strong>Success! </strong>@TempData["AlertMessage"]
                </div>
            }

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>
        <td>

            <input type="button" class="btn btn-primary" style="background-color:darkgoldenrod" value="Edit" onclick="location.href='@Url.Action("UpdateProduct", "Product")'" />
            @*<input type="button" class="btn btn-primary" style="background-color:darkgoldenrod" value="Delete" onclick="location.href='@Url.Action("DeleteProduct", "Product")'" />*@
            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
        </td>
    </tr>
}

</table>
<center>
    <footer>
        <p>
            <input type="button" class="btn btn-primary" value="Add New Product" style="background-color:indigo" onclick="location.href='@Url.Action("CreateProduct", "Product")'" />

            @*@Html.ActionLink("Add New Product", "AddProduct", new { /* id=item.PrimaryKey */ })*@
        </p>
    </footer>
</center>

